<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_56_Posters">

        <control type="group">
            <top>25</top>
            <visible>Control.IsVisible(56)</visible>
            <control type="group">
                <left>635</left>
                <top>0</top>
                <height>245</height>
                <visible>ListItem.IsCollection + String.IsEmpty(ListItem.PlotOutline) + String.IsEmpty(ListItem.Plot)</visible>
                <include content="InfoList">
                    <param name="bottom" value="0" />
                    <param name="sortby" value="year" />
                    <param name="sortorder" value="ascending" />
                    <param name="font" value="font13" />
                </include>
            </control>
            <control type="group">
                <control type="label">
                    <left>695</left>
                    <top>100</top>
                    <right>50</right>
                    <height>40</height>
                    <label>$INFO[ListItem.Label]$VAR[ListSubLabelVar]</label>
                    <font>font45_title</font>
                    <shadowcolor>text_shadow</shadowcolor>
                    <visible>String.IsEmpty(ListItem.Art(clearlogo)) + String.IsEmpty(ListItem.Art(tvshow.clearlogo))</visible>
                </control>
                <control type="image">
                    <left>695</left>
                    <top>-900</top>
                    <right>50</right>
                    <width>480</width>
                    <aspectratio>keep</aspectratio>
                    <texture background="true">$VAR[Image_ClearLogo]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(clearlogo)) | !String.IsEmpty(ListItem.Art(tvshow.clearlogo))</visible>
                </control>
            </control>
            <control type="group">
                <visible>!String.IsEmpty(Container(56).ListItem.Title)</visible>
                <include content="Object_Ratings_Content">
                    <param name="directory" value="$INFO[Skin.String(Icons)]" />
                    <param name="align" value="left" />
                    <param name="top" value="180" />
                    <param name="left" value="695" />
                </include>
            </control>
            <control type="textbox">
                <left>695</left>
                <top>235</top>
                <height>145</height>
                <right>115</right>
                <autoscroll time="3000" delay="7000" repeat="5000">Control.HasFocus(56)</autoscroll>
                <label>$VAR[PlotTextBoxVar]</label>
                <shadowcolor>text_shadow</shadowcolor>
                <visible>![ListItem.IsCollection + String.IsEmpty(ListItem.PlotOutline) + String.IsEmpty(ListItem.Plot)]</visible>
            </control>
            <control type="group">
                <visible>!String.IsEmpty(Container(56).ListItem.Title)</visible>
                <control type="label">
                    <top>400</top>
                    <left>695</left>
                    <font>font32_title</font>
                    <label>$LOCALIZE[31256]</label>
                </control>
                <control type="label">
                    <top>440</top>
                    <left>695</left>
                    <width>500</width>
                    <scroll>true</scroll>
                    <label fallback="-">$INFO[Container(56).ListItem.Studio]</label>
                </control>

                <control type="label">
                    <top>480</top>
                    <left>695</left>
                    <font>font32_title</font>
                    <label>$LOCALIZE[31257]</label>
                </control>
                <control type="label">
                    <top>520</top>
                    <left>695</left>
                    <width>500</width>
                    <height>20</height>
                    <scroll>true</scroll>
                    <label fallback="-">$INFO[Container(56).ListItem.Director]</label>
                </control>

                <control type="label">
                    <top>400</top>
                    <left>1245</left>
                    <font>font32_title</font>
                    <label>$LOCALIZE[31255]</label>
                </control>
                <control type="label">
                    <top>440</top>
                    <left>1245</left>
                    <width>500</width>
                    <height>20</height>
                    <scroll>true</scroll>
                    <label fallback="-">$INFO[Container(56).ListItem.Genre]</label>
                </control>

                <control type="label">
                    <top>480</top>
                    <left>1245</left>
                    <font>font32_title</font>
                    <label>$LOCALIZE[31258]</label>
                </control>
                <control type="label">
                    <top>520</top>
                    <left>1245</left>
                    <width>500</width>
                    <height>20</height>
                    <scroll>true</scroll>
                    <label fallback="-">$INFO[Container(56).ListItem.Country]</label>
                </control>
            </control>
            <control type="group">
                <description>Poster Viewtype</description>
                <centertop>50%</centertop>
                <height>720</height>
                <control type="group">
                    <visible>Control.IsVisible(56)</visible>
                    <include>Visible_Right</include>
                    <include>OpenClose_Right</include>

                    <control type="fixedlist" id="56">
                        <top>466</top>
                        <left>630</left>
                        <right>60</right>
                        <width>70%</width>
                        <height>704</height>
                        <focusposition>1</focusposition>
                        <movement>1</movement>
                        <pagecontrol>5199</pagecontrol>
                        <scrolltime tween="cubic" easing="out">500</scrolltime>
                        <orientation>horizontal</orientation>
                        <onleft>56</onleft>
                        <onup>9000</onup>
                        <ondown>5199</ondown>
                        <onright>56</onright>
                        <visible>Container.Content(movies) | Container.Content(seasons) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(games)</visible>
                        <preloaditems>1</preloaditems>
                        <viewtype label="31254">icon</viewtype>
                        <include content="View_Forced">
                            <param name="string" value="$LOCALIZE[31254]" />
                        </include>
                        <itemlayout width="317" height="407">
                            <control type="group">
                                <include>View_56_Posters_Layout</include>
                            </control>
                        </itemlayout>
                        <focusedlayout width="317" height="407">
                            <control type="group">
                                <control type="group">
                                    <top>5</top>
                                    <left>30</left>
                                    <width>260</width>
                                    <height>370</height>
                                    <control type="image">
                                        <texture colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texture>
                                    </control>
                                    <control type="image">
                                        <texture colordiffuse="$VAR[ColorGradient]" border="5">common/white-gradient-rounded.png</texture>
                                    </control>
                                </control>
                                <include>View_56_Posters_Layout</include>
                                <control type="image">
                                    <top>4</top>
                                    <left>228</left>
                                    <width>64</width>
                                    <height>64</height>
                                    <texture colordiffuse="main_bg_100">indicator/corner.png</texture>
                                </control>
                                <control type="image">
                                    <top>9</top>
                                    <left>256</left>
                                    <width>32</width>
                                    <height>32</height>
                                    <texture>$VAR[ListWatchedIconVar]</texture>
                                </control>
                            </control>
                        </focusedlayout>
                    </control>
                </control>
            </control>

            <control type="group">
                <control type="image">
                    <top>-50</top>
                    <left>0</left>
                    <width>650</width>
                    <height>130%</height>
                    <texture colordiffuse="AltPosterBack">diffuse/poster-wall.png</texture>
                    <bordertexture border="21">overlays/shadow.png</bordertexture>
                    <bordersize>20</bordersize>
                </control>

                <control type="image">
                    <left>-1280</left>
                    <!-- <top>105</top> -->
                    <height>800</height>
                    <centertop>50%</centertop>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[Container(56).ListItem.Art(poster)]</texture>
                </control>
            </control>
        </control>

    </include>
