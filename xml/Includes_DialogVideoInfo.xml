<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="DialogVideoInfo">

        <control type="group">
            <control type="grouplist" id="100">
                <include content="InfoDialogWallContainer">
                    <param name="id" value="51" />
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <param name="label" value="$INFO[ListItem.Label]" />
                    <param name="label2" value="$INFO[ListItem.Label2]" />
                    <param name="itemwidth" value="293" />
                    <param name="itemheight" value="561" />
                    <content limit="25" target="videos">$VAR[Def_Cast_List]</content>
                </include>

                <include content="InfoDialogWallContainer">
                    <param name="id" value="52" />
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <param name="label" value="$INFO[ListItem.Label]" />
                    <param name="label2" value="$INFO[ListItem.Label2]" />
                    <param name="itemwidth" value="293" />
                    <param name="itemheight" value="561" />
                    <content target="videos" sortby="year" sortorder="ascending">$VAR[Def_Set_List]</content>
                </include>

                <include content="InfoDialogWallContainer">
                    <param name="id" value="53" />
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <param name="label" value="$INFO[ListItem.Label]" />
                    <param name="label2" value="$INFO[ListItem.Label2]" />
                    <param name="itemwidth" value="293" />
                    <param name="itemheight" value="561" />
                    <content limit="25" target="videos">$VAR[Def_Similar_List]</content>
                </include>

                <include content="InfoDialogWallContainer">
                    <param name="id" value="54" />
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <param name="label" value="$INFO[ListItem.Label]" />
                    <param name="label2" value="$INFO[ListItem.Label2]" />
                    <param name="itemwidth" value="293" />
                    <param name="itemheight" value="561" />
                    <content target="videos" sortby="year" sortorder="descending" condition="String.IsEqual(ListItem.DBTYPE,movie) + System.HasAddon(plugin.video.themoviedb.helper)">$VAR[Def_Director_List]</content>
                </include>

                <include content="InfoDialogWallContainer">
                    <param name="id" value="55" />
                    <param name="icon" value="$INFO[ListItem.Icon]" />
                    <param name="label" value="$INFO[ListItem.Label]" />
                    <param name="label2" value="$INFO[ListItem.Label2]" />
                    <param name="itemwidth" value="293" />
                    <param name="itemheight" value="561" />
                    <content limit="25" target="videos" condition="String.IsEqual(ListItem.DBTYPE,movie) + System.HasAddon(plugin.video.themoviedb.helper)">$VAR[Def_Studio_List]</content>
                </include>
            </control>

        </control>

    </include>
</includes>