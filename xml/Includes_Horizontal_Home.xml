<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Horizontal_Main">
        <control type="group">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>48</height>
            <control type="group">
                <control type="image">
                    <top>-32</top>
                    <left>-200</left>
                    <width>200%</width>
                    <height>92</height>
                    <texture colordiffuse="AltPosterBack">diffuse/poster-wall.png</texture>
                    <bordertexture border="21">overlays/shadow.png</bordertexture>
                    <bordersize>20</bordersize>
                </control>
            </control>
            <control type="group">
                <control type="group">
                    <include>WidgetHorizontalLabel</include>
                </control>
                <control type="label">
                    <height>40</height>
                    <aligny>center</aligny>
                    <align>right</align>
                    <font>font_topbar_horiz</font>
                    <label>$INFO[Weather.Temperature,   ,]   &#x2022;$INFO[System.Date,   ,]   &#x2022;$INFO[System.Time,   ,]   </label>
                </control>
            </control>
        </control>
        <control type="group" id="5600">
            <include content="Object_Item_Showcase">
                <param name="title" value="$INFO[ListItem.Title]" />
                <param name="plot" value="$VAR[PlotTextBoxVar]" />
                <param name="top" value="75" />
            </include>
            <visible>!Window.IsVisible(movieinformation) + !Window.IsVisible(pvrguideinfo)</visible>
        </control>
        <animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
        <control type="group" id="2000">
            <animation type="Conditional" condition="Control.IsVisible(20000)" reversible="false">
                <effect type="slide" end="0,20" time="60" tween="sine" />
                <effect type="slide" end="0,-20" time="180" tween="sine" delay="80" />
            </animation>
            <animation type="Conditional" condition="Control.IsVisible(20001)" reversible="false">
                <effect type="slide" end="0,-20" time="60" tween="sine" />
                <effect type="slide" end="0,20" time="180" tween="sine" delay="80" />
            </animation>
            <include>OpenClose_Right</include>
            <control type="grouplist" id="3000">
                <top>480</top>
                <height>460</height>
                <itemgap>0</itemgap>
                <usecontrolcoords>false</usecontrolcoords>
                <include>skinshortcuts-template-horizontal</include>
            </control>
            <control type="group" id="2999">
                <include content="Object_Ratings_Content">
                    <param name="directory" value="$INFO[Skin.String(Icons)]" />
                    <param name="align" value="right" />
                    <param name="top" value="425" />
                </include>
            </control>
        </control>
        <control type="group">
            <control type="panel" id="9000">
                <width>1920</width>
                <height>180</height>
                <bottom>0</bottom>
                <movement>6</movement>
                <focusposition>0</focusposition>
                <ondown>9001</ondown>
                <onup>3000</onup>
                <orientation>horizontal</orientation>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <focusedlayout height="95" width="384">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>384</width>
                        <height>95</height>
                        <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    </control>
                    <control type="group">
                        <control type="image">
                            <left>20</left>
                            <width>64</width>
                            <height>64</height>
                            <centertop>50%</centertop>
                            <texture>$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <visible>String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31305]) | String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31306])</visible>
                    </control>
                    <control type="group">
                        <control type="label">
                            <left>84</left>
                            <top>0</top>
                            <height>95</height>
                            <width>300</width>
                            <scroll>true</scroll>
                            <aligny>center</aligny>
                            <align>left</align>
                            <font>font32</font>
                            <label>$INFO[ListItem.Label]</label>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <visible>String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31306]) | String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31307])</visible>
                    </control>
                </focusedlayout>
                <itemlayout height="95" width="384">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>384</width>
                        <height>95</height>
                        <texture colordiffuse="44FFFFFF">common/white.png</texture>
                    </control>
                    <control type="group">
                        <control type="image">
                            <left>20</left>
                            <centertop>50%</centertop>
                            <width>64</width>
                            <height>64</height>
                            <texture colordiffuse="44FFFFFF">$INFO[ListItem.Art(thumb)]</texture>
                        </control>
                        <visible>String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31305]) | String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31306])</visible>
                    </control>
                    <control type="group">
                        <control type="label">
                            <left>84</left>
                            <top>0</top>
                            <height>95</height>
                            <width>300</width>
                            <scroll>true</scroll>
                            <aligny>center</aligny>
                            <align>left</align>
                            <font>font32</font>
                            <label>$INFO[ListItem.Label]</label>
                            <shadowcolor>text_shadow</shadowcolor>
                        </control>
                        <visible>String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31306]) | String.IsEqual(Skin.String(MenuStyle),$LOCALIZE[31307])</visible>
                    </control>
                </itemlayout>
                <content>
                    <include>skinshortcuts-mainmenu</include>
                </content>
            </control>
            <control type="group">
                <control type="image">
                    <left>0</left>
                    <top>995</top>
                    <width>1920</width>
                    <height>95</height>
                    <texture colordiffuse="37FFFFFF">common/white.png</texture>
                </control>
                <include>skinshortcuts-template-submenuHorizontal</include>
            </control>
        </control>
    </include>
</includes>