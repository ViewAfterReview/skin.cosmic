<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="LiveTV_OSD">
        <definition>
            <control type="group" id="200">
                <include>Animation_BottomSlide</include>
                <width>1920</width>
                <control type="group">
                    <include>Animation_BottomSlide</include>
                    <top>-100</top>
                    <control type="image">
                        <width>80%</width>
                        <height>200</height>
                        <texture background="true" border="20" colordiffuse="$VAR[ColorHighlight]">common/pvr-osd.png</texture>
                        <centerleft>50%</centerleft>
                    </control>

                    <control type="group">
                        <control type="label">
                            <top>88</top>
                            <left>220</left>
                            <width>240</width>
                            <align>center</align>
                            <font>font_pvr_clock</font>
                            <label>$INFO[System.Time]</label>
                        </control>

                        <control type="label">
                            <top>16</top>
                            <left>230</left>
                            <width>240</width>
                            <align>center</align>
                            <font>font27</font>
                            <label>$INFO[VideoPlayer.ChannelName]</label>
                        </control>

                        <control type="label">
                            <top>42</top>
                            <left>460</left>
                            <width>120</width>
                            <align>center</align>
                            <font>font_clock</font>
                            <label>$INFO[VideoPlayer.ChannelNumberLabel]</label>
                        </control>
                    </control>

                    <control type="group">
                        <top>18</top>
                        <left>523</left>
                        <animation effect="slide" start="0" end="0,-26" time="200" condition="ControlGroup(201).HasFocus">Conditional</animation>
                        <control type="label">
                            <top>15</top>
                            <left>100</left>
                            <width>59%</width>
                            <font>font32</font>
                            <label>$INFO[Player.Title]</label>
                        </control>

                        <control type="group">
                            <left>30</left>
                            <control type="label">
                                <top>62</top>
                                <left>68</left>
                                <font>font27</font>
                                <label>$INFO[VideoPlayer.StartTime]</label>
                            </control>

                            <control type="label">
                                <top>62</top>
                                <include content="12hrClockSpacing" condition="String.Contains(Window(home).Property(locale.use24hourclock),12h)"></include>
                                <include content="24hrClockSpacing" condition="String.Contains(Window(home).Property(locale.use24hourclock),24h)"></include>
                                <font>font27</font>
                                <label>$INFO[VideoPlayer.EndTime, - ,]</label>
                            </control>

                            <control type="progress">
                                <top>76</top>
                                <include content="12hrClockSpacing2" condition="String.Contains(Window(home).Property(locale.use24hourclock),12h)"></include>
                                <include content="24hrClockSpacing2" condition="String.Contains(Window(home).Property(locale.use24hourclock),24h)"></include>
                                <height>12</height>
                                <width>200</width>
                                <info>PVR.EpgEventProgress</info>
                            </control>
                        </control>

                        <control type="group">
                            <left>30</left>
                            <control type="label">
                                <top>98</top>
                                <left>68</left>
                                <font>font27</font>
                                <label>$INFO[VideoPlayer.NextStartTime]</label>
                            </control>

                            <control type="label">
                                <top>98</top>
                                <include content="12hrClockSpacing" condition="String.Contains(Window(home).Property(locale.use24hourclock),12h)"></include>
                                <include content="24hrClockSpacing" condition="String.Contains(Window(home).Property(locale.use24hourclock),24h)"></include>
                                <font>font27</font>
                                <label>$INFO[VideoPlayer.NextEndTime, - ,]</label>
                            </control>

                            <control type="label">
                                <top>98</top>
                                <include content="12hrClockSpacing2" condition="String.Contains(Window(home).property(locale.country),12h)"></include>
                                <include content="24hrClockSpacing2" condition="String.Contains(Window(home).Property(locale.use24hourclock),24h)"></include>
                                <width>45%</width>
                                <font>font27</font>
                                <label>$INFO[VideoPlayer.NextTitle]</label>
                            </control>
                        </control>
                    </control>
                    <control type="image">
                        <top>0</top>
                        <right>240</right>
                        <width>192</width>
                        <height>auto</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Player.Icon]</texture>
                    </control>
                </control>

                <control type="group" id="200">
                    <include>Animation_BottomSlide</include>
                    <animation effect="fade" start="0" end="100" time="400" condition="ControlGroup(201).HasFocus">Conditional</animation>
                    <control type="grouplist" id="201">
                        <top>40</top>
                        <width>100%</width>
                        <height>135</height>
                        <itemgap>10</itemgap>
                        <align>center</align>
                        <scrolltime tween="sine">200</scrolltime>
                        <orientation>horizontal</orientation>
                        <onup>87</onup>
                        <ondown>noop</ondown>
                        <onleft>70048</onleft>
                        <onright>600</onright>
                        <control type="radiobutton" id="600">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/previous.png"/>
                            </include>
                            <onclick>PlayerControl(Previous)</onclick>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="group" id="698">
                            <width>48</width>
                            <height>48</height>
                            <visible>Player.PauseEnabled</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                            <control type="button" id="604">
                                <left>0</left>
                                <top>0</top>
                                <width>48</width>
                                <height>48</height>
                                <label></label>
                                <font></font>
                                <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/fullscreen/buttons/button-fo.png</texturefocus>
                                <texturenofocus />
                                <onleft>600</onleft>
                                <onright>603</onright>
                                <onup>87</onup>
                                <ondown>noop</ondown>
                                <onclick>PlayerControl(Play)</onclick>
                            </control>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <width>48</width>
                                <height>48</height>
                                <animation center="38,38" effect="zoom" end="100" reversible="false" start="95" time="480" tween="back" condition="Control.HasFocus(602)">Conditional</animation>
                                <texture colordiffuse="white">$VAR[PlayerControlsPlayImageVar]</texture>
                            </control>
                        </control>
                        <control type="radiobutton" id="603">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/stop.png"/>
                            </include>
                            <onclick>PlayerControl(Stop)</onclick>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="607">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/next.png"/>
                            </include>
                            <onclick>PlayerControl(Next)</onclick>
                            <visible>Player.ChapterCount | Integer.IsGreater(Playlist.Length(video),1) | PVR.IsTimeShift</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="608">
                            <textureradioonfocus colordiffuse="white">osd/fullscreen/buttons/record-white.png</textureradioonfocus>
                            <textureradioonnofocus>osd/fullscreen/buttons/record-white.png</textureradioonnofocus>
                            <textureradioofffocus colordiffuse="white">osd/fullscreen/buttons/record.png</textureradioofffocus>
                            <textureradiooffnofocus>osd/fullscreen/buttons/record.png</textureradiooffnofocus>
                            <texturefocus colordiffuse="button_focus">osd/fullscreen/buttons/button-fo.png</texturefocus>
                            <width>48</width>
                            <animation center="38,38" effect="zoom" end="100" reversible="false" start="95" time="480" tween="back">Focus</animation>
                            <height>48</height>
                            <radiowidth>46</radiowidth>
                            <radioheight>46</radioheight>
                            <font></font>
                            <texturenofocus />
                            <radioposx>1</radioposx>
                            <radioposy>0</radioposy>
                            <selected>!PVR.IsRecordingPlayingChannel</selected>
                            <onclick>PVR.ToggleRecordPlayingChannel</onclick>
                            <visible>PVR.CanRecordPlayingChannel</visible>
                            <visible>VideoPlayer.Content(livetv)</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="804">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/home.png"/>
                            </include>
                            <onclick>PlayerControl(ShowVideoMenu)</onclick>
                            <visible>VideoPlayer.HasMenu</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70040">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/channels.png"/>
                            </include>
                            <onclick>Dialog.Close(VideoOSD)</onclick>
                            <onclick>ActivateWindow(PVROSDChannels)</onclick>
                            <visible>VideoPlayer.Content(livetv)</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70041">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/guide.png"/>
                            </include>
                            <onclick>Dialog.Close(VideoOSD)</onclick>
                            <onclick>ActivateWindow(pvrchannelguide)</onclick>
                            <visible>VideoPlayer.Content(livetv) + VideoPlayer.HasEPG</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70043">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/information.png"/>
                            </include>
                            <onclick>Info</onclick>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70044">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/bookmarks.png"/>
                            </include>
                            <onclick>ActivateWindow(videobookmarks)</onclick>
                            <visible>!VideoPlayer.Content(livetv)</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70045">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/teletext.png"/>
                            </include>
                            <onclick>Dialog.Close(VideoOSD)</onclick>
                            <onclick>ActivateWindow(Teletext)</onclick>
                            <visible>VideoPlayer.HasTeletext</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70046">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/settings-subtitle.png"/>
                            </include>
                            <onclick>ActivateWindow(osdsubtitlesettings)</onclick>
                            <visible>!VideoPlayer.Content(LiveTV) | VideoPlayer.HasSubtitles</visible>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70047">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/stereoscopic.png"/>
                            </include>
                            <visible>VideoPlayer.IsStereoscopic</visible>
                            <onclick>SetProperty(settingslist_content,3d,home)</onclick>
                            <onclick>SetProperty(settingslist_header,$LOCALIZE[36501],home)</onclick>
                            <onclick>ActivateWindow(1101)</onclick>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                        <control type="radiobutton" id="70048">
                            <include content="PVROSDButton">
                                <param name="texture" value="osd/fullscreen/buttons/settings.png"/>
                            </include>
                            <onclick>SetProperty(settingslist_content,osd,home)</onclick>
                            <onclick>SetProperty(settingslist_header,$LOCALIZE[5],home)</onclick>
                            <onclick>ActivateWindow(1101)</onclick>
                            <visible>ControlGroup(201).HasFocus</visible>
                        </control>
                    </control>
                </control>
            </control>
            <!-- Hidden control to trigger buttons to show -->
            <control type="button" id="602">
                <top>-1000</top>
                <left>-1000</left>
                <width>1</width>
                <height>1</height>
                <onclick>SetFocus(201)</onclick>
                <onclick>SetFocus(604)</onclick>
                <onup>SetFocus(201)</onup>
                <onup>SetFocus(604)</onup>
                <ondown>SetFocus(201)</ondown>
                <ondown>SetFocus(604)</ondown>
                <onleft>SetFocus(201)</onleft>
                <onleft>SetFocus(604)</onleft>
                <onright>SetFocus(201)</onright>
                <onright>SetFocus(604)</onright>
                <visible>VideoPlayer.Content(livetv)</visible>
            </control>
        </definition>
    </include>
</includes>