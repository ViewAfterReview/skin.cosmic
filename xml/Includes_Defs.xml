<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <variable name="INFO_QUERY">
        <value condition="String.IsEqual(ListItem.DBTYPE,movie) + !String.IsEmpty(ListItem.Property(imdb_id))">imdb_id=$INFO[ListItem.Property(imdb_id)]</value>
        <value condition="String.IsEqual(ListItem.DBTYPE,movie) + !String.IsEmpty(ListItem.IMDBNumber) + String.StartsWith(ListItem.IMDBNumber,tt)">imdb_id=$INFO[ListItem.IMDBNumber]</value>
        <value condition="[String.IsEqual(ListItem.DBTYPE,season) | String.IsEqual(ListItem.DBTYPE,episode) | String.StartsWith(ListItem.Label,Season)] + !String.IsEmpty(ListItem.TvShowTitle)">query=$INFO[ListItem.TvShowTitle]</value>
        <value condition="!String.IsEmpty(ListItem.Title) + !String.IsEmpty(ListItem.Year)">query=$INFO[ListItem.Title]&amp;year=$INFO[ListItem.Year]</value>
        <value condition="!String.IsEmpty(ListItem.Title)">query=$INFO[ListItem.Title]</value>
        <value>query=$INFO[ListItem.Label]</value>
    </variable>

    <variable name="TMDB_TYPE">
        <value condition="String.IsEqual(ListItem.DBTYPE,movie) | ListItem.IsCollection | String.IsEqual(ListItem.DBTYPE,set)">movie</value>
        <value condition="String.IsEqual(ListItem.DBTYPE,tvshow) | String.IsEqual(ListItem.DBTYPE,season) | String.IsEqual(ListItem.DBTYPE,episode)">tv</value>
    </variable>

    <!-- <variable name="Def_Cast_List">
        <value>plugin://script.embuary.helper?info=getcast&amp;type=movie&amp;title=$INFO[ListItem.Title]</value>
    </variable> -->

    <variable name="Def_Set_List">
        <value condition="[!Skin.HasSetting(DisableExtendedInfo) + !String.IsEmpty(ListItem.Set)] + !Container(50).IsUpdating">plugin://plugin.video.themoviedb.helper/?info=collection&amp;type=movie&amp;query=$INFO[ListItem.Set]&amp;nextpage=false</value>
        <value condition="!String.IsEmpty(ListItem.Set) + !Container(50).IsUpdating">videodb://movies/titles/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22set%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b%22$INFO[ListItem.Set]%22%5d%7d%5d%7d%2c%22type%22%3a%22movies%22%7d</value>
    </variable>

    <variable name="Def_Similar_List">
        <value condition="[!Skin.HasSetting(DisableExtendedInfo) + String.IsEqual(ListItem.DBType,tvshow)] + !Container(50).IsUpdating">plugin://plugin.video.themoviedb.helper?info=similar&amp;type=tv&amp;query=$INFO[ListItem.Label]</value>
        <value condition="[!Skin.HasSetting(DisableExtendedInfo) + String.IsEqual(ListItem.DBType,movie)] + !Container(50).IsUpdating">plugin://plugin.video.themoviedb.helper?info=similar&amp;type=movie&amp;query=$INFO[ListItem.Label]</value>
        <value condition="String.IsEqual(ListItem.DBType,movie) + !Container(50).IsUpdating">plugin://script.embuary.helper/?info=getsimilar&amp;dbid=$INFO[ListItem.DBID]&amp;type=movie</value>
        <value condition="String.IsEqual(ListItem.DBType,tvshow) + !Container(50).IsUpdating">plugin://script.embuary.helper/?info=getsimilar&amp;dbid=$INFO[ListItem.DBID]&amp;type=tvshow</value>
    </variable>

    <variable name="Def_Director_List">
        <value condition="!Skin.HasSetting(DisableExtendedInfo) + !Container(1053).IsUpdating">plugin://plugin.video.themoviedb.helper/?info=crew_in_movies&amp;type=person&amp;filter_key=job&amp;filter_value=Director&amp;query=$INFO[ListItem.Director]&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;nextpage=false</value>
        <value condition="!Container(1053).IsUpdating">videodb://movies/titles/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22director%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b%22$INFO[ListItem.Director]%22%5d%7d%5d%7d%2c%22type%22%3a%22movies%22%7d</value>
    </variable>

    <variable name="Def_Studio_List">
        <value condition="[!Skin.HasSetting(DisableExtendedInfo) + String.IsEqual(ListItem.DBType,tvshow)] + !Container(1053).IsUpdating">plugin://plugin.video.themoviedb.helper?info=discover&amp;type=tv&amp;with_companies=$INFO[Window(Home).Property(TMDBHelper.ListItem.Studio.1.TMDB_ID)]&amp;with_id=True&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;nextpage=false</value>
        <value condition="[Skin.HasSetting(DisableExtendedInfo) + String.IsEqual(ListItem.DBType,tvshow)] + !Container(1053).IsUpdating">videodb://tvshows/titles/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22studio%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b%22$INFO[ListItem.Studio]%22%5d%7d%5d%7d%2c%22type%22%3a%22tvshows%22%7d</value>
        <value condition="!Skin.HasSetting(DisableExtendedInfo) + !Container(1053).IsUpdating">plugin://plugin.video.themoviedb.helper?info=discover&amp;type=movie&amp;with_companies=$INFO[Window(Home).Property(TMDBHelper.ListItem.Studio.1.TMDB_ID)]&amp;with_id=True&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;nextpage=false</value>
        <value condition="Skin.HasSetting(DisableExtendedInfo) + !Container(1053).IsUpdating">videodb://movies/titles/?xsp=%7b%22rules%22%3a%7b%22and%22%3a%5b%7b%22field%22%3a%22studio%22%2c%22operator%22%3a%22is%22%2c%22value%22%3a%5b%22$INFO[ListItem.Studio]%22%5d%7d%5d%7d%2c%22type%22%3a%22movies%22%7d</value>
    </variable>

    <variable name="Def_Crew_List">
        <value condition="!Container(1055).IsUpdating">plugin://plugin.video.themoviedb.helper/?info=crew&amp;type=$VAR[TMDB_TYPE]&amp;$VAR[INFO_QUERY]&amp;nextpage=false</value>
    </variable>

    <variable name="Def_Recommended_List">
        <value condition="!Container(1055).IsUpdating">plugin://plugin.video.themoviedb.helper/?info=recommendations&amp;type=$VAR[TMDB_TYPE]&amp;$VAR[INFO_QUERY]&amp;nextpage=false</value>
    </variable>

    <variable name="Def_Genre_List">
        <value condition="!Container(1057).IsUpdating">plugin://plugin.video.themoviedb.helper?info=discover&amp;type=$VAR[TMDB_TYPE]&amp;with_genres=$INFO[ListItem.Genre]&amp;exclude_key=title&amp;exclude_value=$INFO[ListItem.Title]&amp;nextpage=false</value>
    </variable>

    <variable name="Def_Posters_List">
        <value condition="!Container(50).IsUpdating">plugin://plugin.video.themoviedb.helper/?info=posters&amp;type=$VAR[TMDB_TYPE]&amp;$VAR[INFO_QUERY]&amp;nextpage=false</value>
    </variable>
</includes>